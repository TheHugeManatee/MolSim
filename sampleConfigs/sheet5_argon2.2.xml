    <bottomLeft x0="0.575" x1="0.575" x2="0.575" />
    <nX x0="8" x1="8" x2="8" />
    <stepWidth>1.15</stepWidth>
    <type>0</type>
    <initialVelocity x0="0" x1="0" x2="0"/>
  </cuboid> -->
</generator>

</simulationConfig>
